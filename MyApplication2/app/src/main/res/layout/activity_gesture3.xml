<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackcu.myapplication.Gesture2"
    android:background="@drawable/wandback"
    android:clickable="false">

    <ImageView
        android:id="@+id/shield_2"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/shield_2"
        android:layout_gravity="center"
        android:paddingRight="15dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/wand_trans" />

    <ImageView
        android:id="@+id/shield_1"
        android:layout_width="300dp"
        android:layout_height="2500dp"
        android:scaleType="fitXY"
        android:src="@drawable/shield_1"
        android:layout_gravity="center"
        android:paddingRight="12dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/wand_trans" />

    <ImageView
        android:id="@+id/spark_5"
        android:layout_width="130dp"
        android:layout_height="1700dp"
        android:scaleType="fitXY"
        android:src="@drawable/spark_5"
        android:layout_gravity="center"
        android:paddingRight="8.5dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/wand_trans" />


    <ImageView
        android:id="@+id/spark_4"
        android:layout_width="130dp"
        android:layout_height="1700dp"
        android:scaleType="fitXY"
        android:src="@drawable/spark_4"
        android:layout_gravity="center"
        android:paddingRight="12dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/wand_trans" />

    <ImageView
        android:id="@+id/spark_3"
        android:layout_width="120dp"
        android:layout_height="1700dp"
        android:scaleType="fitXY"
        android:src="@drawable/spark_3"
        android:layout_gravity="center"
        android:paddingRight="12dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_above="@+id/wand_trans" />

    <ImageView
        android:id="@+id/spark_2"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/spark_2"
        android:layout_gravity="center"
        android:paddingRight="9dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/spark_1" />

    <ImageView
        android:id="@+id/spark_1"
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/spark_1"
        android:layout_gravity="center"
        android:paddingRight="16dp"
        android:layout_alignWithParentIfMissing="false"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/wand_trans" />

    <ImageView
        android:id="@+id/wand_trans"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/wand_trans"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>